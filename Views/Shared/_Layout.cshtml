<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Employee Portal</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="navbar-left">
                @Html.ActionLink("Employee Portal", "Index", "Employees", new { area = "" }, new { @class = "brand-text" })
            </div>

            <div class="navbar-center">
                <ul class="nav-links">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Employee List", "Index", "Employees", null, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Add Employee", "Create", "Employees", null, new { @class = "nav-link" })</li>
                    }
                </ul>
            </div>

            <div class="navbar-right">
                @if (User.Identity.IsAuthenticated)
                {
                    <span class="user-greeting">Hello, <strong>@User.Identity.Name</strong></span>
                    @Html.ActionLink("Logout", "Logout", "Accounts", null, new { @class = "btn-logout" })
                }
                else
                {
                    @Html.ActionLink("Login", "Login", "Accounts", null, new { @class = "nav-link" })
                }
            </div>
        </div>
    </nav>

    <div class="main-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Employee Portal</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
</body>
</html>
        background: linear-gradient(135deg, rgba(255, 107, 157, 0.1), rgba(38, 208, 124, 0.1));
    }

    .employee-table th {
        padding: 1.2rem 1.5rem;
        text-align: left;
        font-weight: 600;
        color: var(--dark-text);
        font-size: 1.1rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .employee-table td {
        padding: 1.2rem 1.5rem;
        border-top: 1px solid var(--border-color);
        color: var(--dark-text);
    }

    .employee-table tbody tr {
        transition: all 0.3s ease;
    }

    .employee-table tbody tr:hover {

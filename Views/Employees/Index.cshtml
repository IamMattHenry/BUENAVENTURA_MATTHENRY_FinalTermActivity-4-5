        margin: 0 0.25rem;
        border-radius: 6px;
        text-decoration: none;
        font-size: 0.85rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-edit {
        background-color: rgba(38, 208, 124, 0.1);
        color: var(--primary-green);
    }

    .btn-edit:hover {
        background-color: var(--primary-green);
        color: var(--white);

@model IEnumerable<BUENAVENTURA_MATTHENRY_FinalTermActivity_4_5.Employee>

@{
    ViewBag.Title = "Employee List";
}

<div class="employee-container">
    <div class="page-header">
        <h1 class="page-title">Employee Management</h1>
        <p class="page-subtitle">Manage your team members</p>
    </div>

    <div class="action-bar">
        @Html.ActionLink("Create New Employee", "Create", null, new { @class = "btn-primary btn-create" })
    </div>

    <div class="table-container">
        <table class="employee-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Designation</th>
                    <th>Salary</th>
                    <th class="actions-column">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="employee-name">
                            <div class="name-avatar">@item.Name.Substring(0, 1).ToUpper()</div>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td style="font-size: 1.1rem;">@Html.DisplayFor(modelItem => item.Designation)</td>
                        <td class="salary-cell">₱@(item.Salary?.ToString("N0") ?? "N/A")</td>
                        <td class="actions-cell">
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "action-btn btn-edit" })
                            @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "action-btn btn-details" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "action-btn btn-delete" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Any())
        {
            <div class="empty-state">
                <p>No employees found. Add your first employee to get started!</p>
            </div>
        }
    </div>
</div>

<style>
    .employee-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    .page-header {
        margin-bottom: 2rem;
    }


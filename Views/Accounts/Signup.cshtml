@model BUENAVENTURA_MATTHENRY_FinalTermActivity_4_5.Models.UserModel
@{
    ViewBag.Title = "Signup";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Employee Portal</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                <h1 class="auth-title">Create Account</h1>
                <p class="auth-subtitle">Join our employee portal</p>
            </div>

            @using (Html.BeginForm("Signup", "Accounts", FormMethod.Post, new { @class = "auth-form" }))
            {
                @Html.AntiForgeryToken()

                if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @Html.ValidationSummary(false, "Please correct the errors below.")
                    </div>
                }

                <div class="form-group">
                    @Html.LabelFor(model => model.UserName, "Username", new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-input", placeholder = "Choose a username" })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "form-error" })
                </div>

                <div class="form-group">
                    @Html.Label("UserPassword", "Password", new { @class = "form-label" })
                    @Html.PasswordFor(model => model.UserPassword, new { @class = "form-input", placeholder = "Create a strong password" })
                    @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "form-error" })
                </div>

                <button type="submit" class="btn-primary">Create Account</button>
            }

            <div class="auth-footer">
                <p>Already have an account? @Html.ActionLink("Sign in here", "Login", "Accounts", null, new { @class = "auth-link" })</p>
            </div>
        </div>
    </div>
</body>
</html>